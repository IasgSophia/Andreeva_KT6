<Page x:Class="PetshopApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetshopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация">

    <Grid>
        <StackPanel>
            <TextBlock>Логин:</TextBlock>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <TextBlock>Пароль:</TextBlock>
            <PasswordBox x:Name="PasswordBox"></PasswordBox>
            <Button x:Name="LoginButton" Click="LoginButton_Click"></Button>
            <Button x:Name="GuestButton" Click="GuestButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
